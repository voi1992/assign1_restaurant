<!DOCTYPE html>
<html>
<head>
  <title>Saigonrestaurant</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<nav class="navbar navbar-light bg-faded">
  <%= link_to "Saigon Restaurant", root_path, class: "navbar-brand" %>
  <ul class="nav navbar-nav">
    <li class="nav-item active">
      <%= link_to "Menu", menu_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to "Contact us", contanct_us_path, class: 'nav-link' %>
    </li>
  </ul>
  <%= form_tag search_path, method: :get, class: "form-inline pull-xs-right" do %>
      <%= text_field_tag 'search', nil, class: "form-control" %>
      <%= submit_tag "Search", class: "btn btn-outline-success" %>
  <% end %>

</nav>
<div class="container">
  <%= yield %>
</div>
</body>
</html>
