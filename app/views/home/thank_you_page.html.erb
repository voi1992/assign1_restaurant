<div class="row">
  <h1 class="text-xs-center display-4">Check out</h1>
  <table class="table">
    <thead class="thead-default">
    <tr>
      <th>#</th>
      <th>Dish</th>
      <th style="text-align: right">Price</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @userorder.food_items.each_with_index do |food, i| %>
        <tr>
          <th scope="row"><%= i+1 %></th>
          <td><%= food["name"] %></td>
          <td class="text-xs-right"><%= food["price"] %> Đ</td>
        </tr>
        <% @total_price += food["price"].to_f %>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <th class="text-xs-right">Total Price: <%= @total_price.round(2) %> Đ</th>
    </tr>
    </tbody>
  </table>
</div>
<h2 class="text-xs-center">Your's Information</h2>
<div class="col-xs-12">
  <h4>Name: <%= @userorder.name %></h4>
  <h4>Phone Number: <%= @userorder.phone_number %></h4>
  <h4>Address: <%= @userorder.address %></h4>
</div>
<br>

